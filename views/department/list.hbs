<h3><a class="btn btn-secondary" href="/department"><i class="fa fa-plus"></i>Create New</a>Department List</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.departmentId}}</td>
            <td>{{this.departmentName}}</td>

            <td>
                <a href="/department/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i><b>Update</b> &nbsp;&nbsp;</a>
                <a href="/department/delete/{{this._id}}" onclick="return confirm('Are you want to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i><b>Trash</b></a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>