<h3>{{viewTitle}}</h3>




<form action="/department" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{department._id}}">

    <select name="schoolName">

     {{#each list}}
        <tr>
            <option value="{{this.schoolName}}"></option>
        </tr>
        {{/each}}
    </tbody>
  </select>
    
    <div class="form-group">
        <label>Department ID:</label>
        <input type="text" class="form-control" name = "departmentId" placeholder="Department ID" value="{{department.departmentId}}">
        <div class="text-danger">
            {{department.departmentIdError}}
        </div>
        
    </div>

    <div class="form-group">
        <label>Department Name:</label>
        <input type="text" class="form-control" name = "departmentName" placeholder="Department Name" value="{{department.departmentName}}">
        <div class="text-danger">
            {{department.departmentNameError}}
        </div>
        
    
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-secondary" href="/department/list"><i class="fa fa-list-alt"></i>View All</a>
        
    </div>

</form>