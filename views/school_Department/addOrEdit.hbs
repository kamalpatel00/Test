<h3>{{viewTitle}}</h3>

<form action="/school_Department" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{school_Department._id}}">
    
    <div class="form-row">
        <div class="col-md-6 mb-3">
        <label>School ID:</label><span style="color: red ; display: inline; float: none;">*</span>
        <input type="text" class="form-control" name = "schoolId" placeholder="School ID" value="{{school_Department.schoolId}}">
        <div class="text-danger">
            {{school_Department.schoolIdError}}
        </div>
    </div>

    <div class="col-md-6 mb-3">
    <label>School:</label><span style="color: red ; display: inline; float: none;">*</span>
        <label>School Name:</label>
        <input type="text" class="form-control" name = "schoolName" placeholder="School Name" value="{{school_Department.schoolName}}">
        <div class="text-danger">
            {{school_Department.schoolNameError}}
        </div>
    </div>
 </div>

    
    

    <div class="form-row">
        <div class="col-md-6 mb-3">
        <label>Department ID:</label><span style="color: red ; display: inline; float: none;">*</span>
        <input type="text" class="form-control" name = "departmentId" placeholder="Department ID" value="{{school_Department.departmentId}}">
        <div class="text-danger">
            {{school_Department.departmentIdError}}
        </div>
    </div>

        <div class="col-md-6 mb-3">
        <label>Department Name:</label><span style="color: red ; display: inline; float: none;">*</span>
        <input type="text" class="form-control" name = "departmentName" placeholder="Department Name" value="{{school_Department.departmentName}}">
        <div class="text-danger">
            {{school_Department.departmentNameError}}
        </div>
        </div>
    </div


    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-secondary" href="/school_Department/list"><i class="fa fa-list-alt"></i>View All</a>
    </div>

</form>